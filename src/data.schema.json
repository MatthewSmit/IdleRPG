{
    $schema: "https://json-schema.org/draft/2020-12/schema",
    $id: "https://idlemmo.com/data.schema.json",
    type: "object",
    properties: {
        classes: {
            type: "array",
            items: {
                $ref: "#/definitions/class"
            }
        },
        skills: {
            type: "array",
            items: {
                $ref: "#/definitions/skill"
            },
        },
        races: {
            type: "array",
            items: {
                $ref: "#/definitions/race"
            },
        }
    },
    additionalProperties: false,
    definitions: {
        class: {
            type: "object",
            additionalProperties: false,
            properties: {
                id: {
                    type: "string"
                },
                levellingDifficulty: {
                    type: "number",
                    minimum: 0.1
                },
                levelStats: {
                    type: "object",
                    additionalProperties: false,
                    properties: {
                        strength: {
                            $ref: "#/definitions/levelStat"
                        },
                        speed: {
                            $ref: "#/definitions/levelStat"
                        },
                        agility: {
                            $ref: "#/definitions/levelStat"
                        },
                        dexterity: {
                            $ref: "#/definitions/levelStat"
                        },
                        stamina: {
                            $ref: "#/definitions/levelStat"
                        },
                        wisdom: {
                            $ref: "#/definitions/levelStat"
                        },
                        intelligence: {
                            $ref: "#/definitions/levelStat"
                        },
                        charisma: {
                            $ref: "#/definitions/levelStat"
                        }
                    }
                },
                skills: {
                    type: "array",
                    items: {
                        type: "object",
                        properties: {
                            id: {
                                type: "string"
                            },
                            maxRank: {
                                type: "integer",
                                minimum: 1,
                                maximum: 7,
                            }
                        },
                        additionalProperties: false
                    }
                }
            },
            required: [
                "id",
                "levellingDifficulty"
            ]
        },
        levelStat: {
            oneOf: [
                {
                    type: "number",
                    minimum: 0
                },
                {
                    type: "array",
                    minItems: 2,
                    maxItems: 2,
                    items: {
                        type: "number",
                        minimum: 0
                    }
                }
            ]
        },
        race: {
            type: "object",
            additionalProperties: false,
            properties: {
                id: {
                    type: "string"
                }
            },
            required: [
                "id"
            ]
        },
        skill: {
            type: "object",
            additionalProperties: false,
            properties: {
                id: {
                    type: "string"
                },
            },
            required: [
                "id",
            ]
        }
    }
}
