{
    $schema: "https://json-schema.org/draft/2020-12/schema",
    $id: "https://idlemmo.com/data.schema.json",
    type: "object",
    properties: {
        classes: {
            type: "array",
            items: {
                $ref: "#/definitions/class"
            }
        },
        items: {
            type: "array",
            items: {
                $ref: "#/definitions/item"
            }
        },
        monsters: {
            type: "array",
            items: {
                $ref: "#/definitions/monster"
            }
        },
        skills: {
            type: "array",
            items: {
                $ref: "#/definitions/skill"
            },
        },
        start: {
            type: "array",
            items: {
                $ref: "#/definitions/start"
            },
        },
        races: {
            type: "array",
            items: {
                $ref: "#/definitions/race"
            },
        }
    },
    additionalProperties: false,
    definitions: {
        class: {
            type: "object",
            additionalProperties: false,
            properties: {
                id: {
                    type: "string"
                },
                levellingDifficulty: {
                    type: "number",
                    minimum: 0.1
                },
                levelStats: {
                    type: "object",
                    additionalProperties: false,
                    properties: {
                        strength: {
                            $ref: "#/definitions/levelStat"
                        },
                        speed: {
                            $ref: "#/definitions/levelStat"
                        },
                        agility: {
                            $ref: "#/definitions/levelStat"
                        },
                        dexterity: {
                            $ref: "#/definitions/levelStat"
                        },
                        stamina: {
                            $ref: "#/definitions/levelStat"
                        },
                        wisdom: {
                            $ref: "#/definitions/levelStat"
                        },
                        intelligence: {
                            $ref: "#/definitions/levelStat"
                        },
                        charisma: {
                            $ref: "#/definitions/levelStat"
                        }
                    }
                },
                skills: {
                    type: "array",
                    items: {
                        type: "object",
                        properties: {
                            id: {
                                type: "string"
                            },
                            maxRank: {
                                type: "integer",
                                minimum: 1,
                                maximum: 7,
                            }
                        },
                        additionalProperties: false
                    }
                }
            },
            required: [
                "id",
                "levellingDifficulty"
            ]
        },
        item: {
            type: "object",
            additionalProperties: false,
            properties: {
                id: {
                    type: "string"
                }
            },
            required: [
                "id"
            ]
        },
        levelStat: {
            oneOf: [
                {
                    type: "number",
                    minimum: 0
                },
                {
                    type: "array",
                    minItems: 2,
                    maxItems: 2,
                    items: {
                        type: "number",
                        minimum: 0
                    }
                }
            ]
        },
        monster: {
            type: "object",
            additionalProperties: false,
            properties: {
                id: {
                    type: "string"
                }
            },
            required: [
                "id"
            ]
        },
        modifier: {
            type: "object",
            properties: {
                modifier: {
                    type: "string",
                    enum: [
                        "attack-bonus",
                        "damage-bonus",
                        "dual-wield",
                        "skill-bonus"
                    ]
                },
                skill: {
                    type: "string"
                },
                value: {
                    type: "string"
                },
            },
            required: [
                "modifier"
            ],
            additionalProperties: false
        },
        race: {
            type: "object",
            additionalProperties: false,
            properties: {
                id: {
                    type: "string"
                }
            },
            required: [
                "id"
            ]
        },
        start: {
            type: "object",
            additionalProperties: false,
            properties: {
                class: {
                    type: "string"
                },
                race: {
                    type: "string"
                },
                skills: {
                    type: "array",
                    items: {
                        type: "string"
                    }
                }
            },
            required: [
                "class",
                "race",
                "skills"
            ]
        },
        skill: {
            type: "object",
            additionalProperties: false,
            properties: {
                id: {
                    type: "string"
                },
                effects: {
                    type: "object",
                    properties: {
                        "1": {
                            type: "array",
                            items: {
                                $ref: "#/definitions/modifier"
                            }
                        },
                        "2": {
                            $ref: "#/definitions/skill/properties/effects/properties/1"
                        },
                        "3": {
                            $ref: "#/definitions/skill/properties/effects/properties/1"
                        },
                        "4": {
                            $ref: "#/definitions/skill/properties/effects/properties/1"
                        },
                        "5": {
                            $ref: "#/definitions/skill/properties/effects/properties/1"
                        },
                        "6": {
                            $ref: "#/definitions/skill/properties/effects/properties/1"
                        },
                        "7": {
                            $ref: "#/definitions/skill/properties/effects/properties/1"
                        }
                    },
                    additionalProperties: false
                }
            },
            required: [
                "id",
                "effects"
            ]
        },
    }
}
