{
    $schema: "https://json-schema.org/draft/2020-12/schema",
    $id: "https://idlemmo.com/data.schema.json",
    type: "object",
    properties: {
        classes: {
            type: "array",
            items: {
                $ref: "#/definitions/class"
            }
        },
        items: {
            type: "array",
            items: {
                $ref: "#/definitions/item"
            }
        },
        monsters: {
            type: "array",
            items: {
                $ref: "#/definitions/monster"
            }
        },
        skills: {
            type: "array",
            items: {
                $ref: "#/definitions/skill"
            },
        },
        start: {
            type: "array",
            items: {
                $ref: "#/definitions/start"
            },
        },
        races: {
            type: "array",
            items: {
                $ref: "#/definitions/race"
            },
        }
    },
    additionalProperties: false,
    definitions: {
        class: {
            type: "object",
            additionalProperties: false,
            properties: {
                id: {
                    type: "string"
                },
                health: {
                    $ref: "#/definitions/diceRoll"
                },
                energy: {
                    $ref: "#/definitions/diceRoll"
                },
                mana: {
                    $ref: "#/definitions/diceRoll"
                },
                levellingDifficulty: {
                    type: "number",
                    minimum: 0.1
                },
                levelStats: {
                    type: "object",
                    additionalProperties: false,
                    properties: {
                        strength: {
                            $ref: "#/definitions/levelStat"
                        },
                        speed: {
                            $ref: "#/definitions/levelStat"
                        },
                        agility: {
                            $ref: "#/definitions/levelStat"
                        },
                        dexterity: {
                            $ref: "#/definitions/levelStat"
                        },
                        stamina: {
                            $ref: "#/definitions/levelStat"
                        },
                        wisdom: {
                            $ref: "#/definitions/levelStat"
                        },
                        intelligence: {
                            $ref: "#/definitions/levelStat"
                        },
                        charisma: {
                            $ref: "#/definitions/levelStat"
                        }
                    }
                },
                skills: {
                    type: "array",
                    items: {
                        type: "object",
                        properties: {
                            id: {
                                type: "string"
                            },
                            maxRank: {
                                type: "integer",
                                minimum: 1,
                                maximum: 7,
                            }
                        },
                        additionalProperties: false
                    }
                }
            },
            required: [
                "id",
                "health",
                "energy",
                "mana",
                "levellingDifficulty",
                "levelStats",
                "skills",
            ]
        },
        diceRoll: {
            oneOf: [
                {
                    type: "number"
                },
                {
                    type: "string",
                    // Possibly regex validation here
                }
            ]
        },
        item: {
            oneOf: [
                {
                    $ref: "#/definitions/item/definitions/weapon"
                }
            ],
            definitions: {
                base: {
                    type: "object",
                    properties: {
                        id: {
                            type: "string"
                        },
                        category: {
                            type: "string",
                            enum: [
                                "weapon"
                            ]
                        },
                        required: [
                            "id",
                            "category"
                        ]
                    },
                    additionalProperties: false
                },
                weapon: {
                    $ref: "#/definitions/item/definitions/base",
                    type: "object",
                    properties: {
                        category: {
                            type: "string",
                            enum: [
                                "weapon"
                            ]
                        },
                        weaponSkill: {
                            type: "string"
                        },
                        attackBonus: {
                            type: "integer"
                        },
                        damage: {
                            $ref: "#/definitions/diceRoll"
                        }
                    },
                    required: [
                        "id",
                        "category",
                        "weaponSkill",
                        "attackBonus",
                        "damage",
                    ],
                    additionalProperties: false
                }
            },
        },
        levelStat: {
            oneOf: [
                {
                    type: "number",
                    minimum: 0
                },
                {
                    type: "array",
                    minItems: 2,
                    maxItems: 2,
                    items: {
                        type: "number",
                        minimum: 0
                    }
                }
            ]
        },
        monster: {
            type: "object",
            additionalProperties: false,
            properties: {
                id: {
                    type: "string"
                },
                baseLevel: {
                    type: "integer",
                    minimum: 1
                },
                health: {
                    $ref: "#/definitions/diceRoll"
                },
                energy: {
                    $ref: "#/definitions/diceRoll"
                },
                mana: {
                    $ref: "#/definitions/diceRoll"
                },
                attacks: {
                    type: "array",
                    items: {
                        type: "object",
                        properties: {
                            name: {
                                type: "string"
                            },
                            attackSpeed: {
                                type: "integer",
                                minimum: 1
                            },
                            attackModifier: {
                                type: "integer",
                                minimum: 1,
                            },
                            damage: {
                                $ref: "#/definitions/diceRoll"
                            }
                        },
                        required: [
                            "name",
                            "attackSpeed",
                            "attackModifier",
                            "damage"
                        ],
                        additionalProperties: false
                    }
                },
                dodge: {
                    type: "integer",
                    minimum: 1
                },
                armour: {
                    type: "integer",
                }
            },
            required: [
                "id",
                "baseLevel",
                "health",
                "energy",
                "mana",
                "attacks",
                "dodge"
            ]
        },
        modifier: {
            type: "object",
            properties: {
                modifier: {
                    type: "string",
                    enum: [
                        "attack-bonus",
                        "damage-bonus",
                        "dual-wield",
                        "skill-bonus"
                    ]
                },
                skill: {
                    type: "string"
                },
                value: {
                    type: "string"
                },
            },
            required: [
                "modifier"
            ],
            additionalProperties: false
        },
        race: {
            type: "object",
            additionalProperties: false,
            properties: {
                id: {
                    type: "string"
                },
                baseHealth: {
                    type: "integer",
                    minimum: 0
                },
                baseEnergy: {
                    type: "integer",
                    minimum: 0
                },
                baseMana: {
                    type: "integer",
                    minimum: 0
                }
            },
            required: [
                "id",
                "baseEnergy",
                "baseHealth",
                "baseMana"
            ]
        },
        start: {
            type: "object",
            additionalProperties: false,
            properties: {
                class: {
                    type: "string"
                },
                race: {
                    type: "string"
                },
                skills: {
                    type: "array",
                    items: {
                        type: "string"
                    },
                    minItems: 1
                },
                items: {
                    type: "array",
                    items: {
                        type: "string"
                    }
                }
            },
            required: [
                "class",
                "race",
                "skills",
                "items",
            ]
        },
        skill: {
            type: "object",
            additionalProperties: false,
            properties: {
                id: {
                    type: "string"
                },
                effects: {
                    type: "object",
                    properties: {
                        "1": {
                            type: "array",
                            items: {
                                $ref: "#/definitions/modifier"
                            }
                        },
                        "2": {
                            $ref: "#/definitions/skill/properties/effects/properties/1"
                        },
                        "3": {
                            $ref: "#/definitions/skill/properties/effects/properties/1"
                        },
                        "4": {
                            $ref: "#/definitions/skill/properties/effects/properties/1"
                        },
                        "5": {
                            $ref: "#/definitions/skill/properties/effects/properties/1"
                        },
                        "6": {
                            $ref: "#/definitions/skill/properties/effects/properties/1"
                        },
                        "7": {
                            $ref: "#/definitions/skill/properties/effects/properties/1"
                        }
                    },
                    additionalProperties: false
                }
            },
            required: [
                "id",
                "effects"
            ]
        },
    }
}
